/* miniprogram/pages/guide/guide.wxss */
page {
    height: 100%;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: rgb(20, 20, 20);
    z-index: 20;
    width: 500rpx;
    position: fixed;
    top: 380rpx;
    left: 125rpx;
    transition: all 300ms ease;
}

.userinfo-avatar {
    overflow: hidden;
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    z-index: 99;
    border-radius: 100%;
}

.bgimg {
    z-index: -1;
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
}

.logo {
    height: 175rpx;
    width: 73vw;
    position: relative;
    left: 13.5vw;
    top: 12vh;
}

.userinfo-avatar:after {
    border: none;
}

.button {
    z-index: 30;
    height: 80rpx;
    width: 500rpx;
    margin: 30rpx;
    border-radius: 10rpx;
    background-color: #1296DB;
    font-size: 30rpx;
    color: #FFFFFF;
    flex-flow: column nowrap;
    align-items: center;
    justify-content: center;
}

.login {
    position: relative;
    left: 0rpx;
    top: 118rpx;
    display: flex;
}

.start {
    display: none;
}

.com-select {
    position: relative;
    z-index: 40;
}

.com-selectBox {
    position: relative;
    left: 0rpx;
    top: 110rpx;
}