.userinfo-avatar{
    overflow: hidden;
    width: 72rpx;
    height: 72rpx;
    z-index: 99;
    border-radius: 100%;
}

.ceiling {
    position: fixed;
    top: 0;
    left: 0;
    min-width: 100vw;
    height: 90rpx;
}

.textarea-2-line {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
    align-content: center;
}

/* +号按钮 */

.pub_button {
    width: 400rpx;
    height: 100rpx;
    position: fixed;
    bottom: 30rpx;
    right: 20rpx;
}

.pub_icon {
    width: 100rpx;
    height: 100rpx;
}

.pub.show {
    transition: all 0.6s;
    transform: rotate(-135deg);
}

.pub.un_show {
    transition: all 0.6s;
    transform: rotate(0deg);
}

.pub {
    z-index: 10;
}

.pub, .mine, .setting, .publish, .music {
    position: absolute;
    right: 0;
}

.mine.show {
    transition: all 0.6s;
    transform: translateX(-110rpx);
}

.setting.show {
    transition: all 0.6s;
    transform: translateX(-220rpx);
}

.publish.show {
    transition: all 0.6s;
    transform: translateX(-330rpx);
}

.music.show {
    transition: all 0.6s;
    transform: translateX(-440rpx);
}

.mine.un_show, .setting.un_show, .publish.un_show, .music.un_show {
    transition: all 0.6s;
    transform: translateX(0rpx);
}

map {
    width: 580rpx;
    height: 350rpx;
}


/* modal 中的三角形*/

.triangle {
    width: 100rpx;
    height: 100rpx;
    border-style: solid;
    border-width: 50rpx;
}

.left-bottom-triangle-go {
    border-color: #fff #fff #0081ff#0081ff;
}

.right-top-triangle-go {
    border-color: #1cbbb4 #1cbbb4 #fff #fff;
}

.left-bottom-triangle-back {
    border-color: #fff #fff #ff9700 #ff9700;
}

.right-top-triangle-back {
    border-color: #ed1c24 #ed1c24 #fff #fff;
}

/* divider.wxss */

.loadmore {
    width: 100%;
    line-height: 4.6em;
    font-size: 14px;
    text-align: center;
}

.loading_text {
    display: inline-block;
    vertical-align: middle;
}

.loadmore_line {
    border-top: 1px solid #e5e5e5;
    margin-top: 3.0em;
}

.loadmore_text_in-line {
    position: relative;
    top: -2.4em;
    padding: 0 0.55em;
    background-color: #f1f1f1;
    color: #999;
}

.loading {
    width: 20px;
    height: 20px;
    display: inline-block;
    vertical-align: middle;
    animation: loading 1s steps(12, end) infinite;
    background: transparent url(data:image/svg+xml;base64,) no-repeat;
    background-size: 100%;
}

@keyframes loading {
    0% {
        transform: rotate3d(0, 0, 1, 0deg);
    }

    100% {
        transform: rotate3d(0, 0, 1, 360deg);
    }
}
